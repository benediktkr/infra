# ansible managed

# https://owntone.github.io/owntone-server/advanced/outputs-pulse/

[Unit]
Description=Pulseaudio sound server
Before=sound.target

[Service]
# [pulseaudio] main.c: System mode refused for non-root user. Only starting the D-Bus server lookup service.
#User=pulse
#Group=pulse
ExecStart=/usr/bin/pulseaudio --system --disallow-exit

[Install]
WantedBy=multi-user.target

