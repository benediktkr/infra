---

broker: tcp://{{ broker }}:5559
frequency: {{ frequency | default(240) }}
location: {{ location | default(inventory_hostname.split('.')[1]) }}

{% if sensors is defined %}
sensors:
{% for sensor in sensors  %}

  - {% for key, value in sensor.items() %} {{ key }}: {{ value }}
    {% endfor %}
{% endfor %}

{% endif %}
