---

zmq:
  topic: 'zflux:{{ zflux.zmq.topic }}'
{% if zflux.zmq.bind_port is defined %}
  bind: 'tcp://*:{{ zflux.zmq.bind_port|default("5558") }}'
{% else %}
  connect: 'tcp://{{ broker }}:5560'
{% endif %}

influxdb:
  host: {{ ingest }}
  db: {{ zflux.influxdb.user }}
  user: {{ zflux.influxdb.user }}
  passwd: {{ zflux.influxdb.passwd }}
