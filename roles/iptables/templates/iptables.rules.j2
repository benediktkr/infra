# Lokun VPN server iptable rules
# make template
{% if not iptables_no_discard_icmp19|default(False) %}
*raw
:PREROUTING ACCEPT [383321:226121929]
:OUTPUT ACCEPT [328664:371455172]
-A PREROUTING -p udp -m udp --dport 19 -j DROP
COMMIT
{% endif %}
*nat
:PREROUTING ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
{% if 'vpnservers' in group_names %}
-A POSTROUTING -s {{ wireguard_cidr }} -o {{ main_inet }} -j MASQUERADE
{% endif %}
COMMIT
# Completed on Mon Apr  1 00:33:07 2013
# Generated by iptables-save v1.4.8 on Mon Apr  1 00:33:07 2013
*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [232:26880]
{% if 'docker' in group_names %}
:DOCKER-USER - [0:0]
{% endif %}
:FWINPUT - [0:0]
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
{% if ansible_wg0 is defined %}
-A INPUT -i wg0 -j ACCEPT
-A FWINPUT -i wg0 -j ACCEPT
{% endif %}
{% if 'docker' in group_names %}
-A INPUT -s 172.17.0.1/24 -j ACCEPT
-A INPUT -s 172.18.0.1/24 -j ACCEPT
-A DOCKER-USER -i {{ main_inet }} -j FWINPUT
{% endif %}
-A INPUT -m conntrack --ctstate NEW -j FWINPUT
{% for item in open_ports %}
{% set proto = item.proto|default('tcp') %}
-A FWINPUT -p {{ proto }} -m {{ proto }} --dport {{ item.port }} -j ACCEPT
{% endfor %}
-A FWINPUT -j DROP
{% if 'vpnservers' in group_names %}
-A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -i wg0 -o {{ main_inet }} -j ACCEPT
-A FORWARD -o {{ main_inet }} -i wg0 -j ACCEPT
-A FORWARD -o wg0 -i wg0 -j ACCEPT
#-A UDP -p udp -m udp --dport {{ wireguard_port }} -j ACCEPT
{% endif %}
-A FORWARD -j REJECT --reject-with icmp-host-unreachable
COMMIT
