# ansible distributed

AUTHENTIK_ERROR_REPORTING__ENABLED=false
AUTHENTIK_DISABLE_UPDATE_CHECK=false
AUTHENTIK_DISABLE_STARTUP_ANALYTICS=false
AUTHENTIK_AVATARS=none

AUTHENTIK_GDPR_COMPLIANCE=true
AUTHENTIK_IMPERSONATION=false

AUTHENTIK_DEFAULT_USER_CHANGE_EMAIL=true

AUTHENTIK_SECRET_KEY={{ authentik_secret_key }}
AUTHENTIK_COOKIE_DOMAIN={{ domain }}

AUTHENTIK_REDIS__HOST=authentik-redis

AUTHENTIK_PORT_HTTP={{ authentik_port }}

AUTHENTIK_POSTGRESQL__HOST=172.17.0.1
AUTHENTIK_POSTGRESQL__USER={{ systemuserlist.authentik.username }}
AUTHENTIK_POSTGRESQL__NAME={{ systemuserlist.authentik.username }}
AUTHENTIK_POSTGRESQL__PASSWORD={{ systemuserlist.authentik.postgres_passwd }}

AUTHENTIK_EMAIL__HOST={{ smtp_server }}
AUTHENTIK_EMAIL__PORT={{ smtp_port }}
AUTHENTIK_EMAIL__USERNAME={{ smtp_username }}
AUTHENTIK_EMAIL__PASSWORD={{ smtp_passwd }}
AUTHENTIK_EMAIL__USE_TLS=true
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__TIMEOUT=10
AUTHENTIK_EMAIL__FROM={{ authentik_email }}

AUTHENTIK_FOOTER_LINKS='[{"name": "sudo.is","href":"https://www.sudo.is"}, {"name": "system status","href":"https://status.sudo.is"}]'

AUTHENTIK_LISTEN__HTTP=0.0.0.0:{{ authentik_port }}
AUTHENTIK_LISTEN__HTTPS=0.0.0.0:9443
AUTHENTIK_LISTEN__METRICS=0.0.0.0:{{ authentik_port_metrics }}

