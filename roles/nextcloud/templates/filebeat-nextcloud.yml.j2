---

{% for item in nextclouds %}

{% if item.cron %}

- type: filestream
  paths:
    - {{ item.root }}/data/nextcloud.log

  scan_frequency: 10s
  enabled: true

  json.keys_under_root: true
  json.add_error_key: true

  fields_under_root: true
  fields:
    service.type: nextcloud

  tags:
    - nextcloud

{% endif %}

{% endfor %}
