# VPN server iptable rules
# make template
*nat
:PREROUTING ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
{% if openvpn_enabled %}
-A POSTROUTING -s 10.104.37.0/24 -o eth0 -j MASQUERADE
{% endif %}
{% if wireguard_enabled %}
-A POSTROUTING -s {{ wireguard_cidr }} -o eth0 -j MASQUERADE
{% endif %}
COMMIT
